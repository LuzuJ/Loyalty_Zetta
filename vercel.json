{
  "version": 2,
  "builds": [
    {
      "src": "public/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "src/**/*",
        "installCommand": "npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/server.js"
    }
  ]
}